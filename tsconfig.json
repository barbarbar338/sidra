{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"typedocOptions": {
		"mode": "modules",
		"out": "docs",
		"name": "⚔️ SidraJS Docs"
	},
	"exclude": ["node_modules", "dist", "typings"]
}
